---
interface Props {
	date: Date;
}

const { date } = Astro.props;

import { getLocale } from '../utils/localize';
let locale = getLocale(Astro.request);
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(`${locale}-${locale}`, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
